@model RegistrationRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Email" class="form-control" placeholder="Email..."/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Name" class="form-control" placeholder="Name..."/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="PhonenNumber" class="form-control" placeholder="PhonenNumber..."/>
                <span asp-validation-for="PhonenNumber" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Password" class="form-control" placeholder="Password..."/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled="disabled" selected="selected">--Select Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>